<h1><%=@question.title%></h1>
<%=@message%>
<p>question: <%=@question.description%></p>
answers:
<ul>
  <% @answers.each do |answer| %>
    <li><%= answer.description %></li>
  <%end%>
</ul>

<div>
<%= form_for [@question, @answer] do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>
</div>
