<h1><%=@question.title%></h1>
<%=link_to "Edit This Question", edit_question_path(@question) %>
<%= link_to 'Destroy', @question, method: :delete, data: { confirm: 'Are you sure?' } %>
<p>question: <%=@question.description%></p>
answers:
<ul>
  <% @answers.each do |answer| %>
    <li><%= answer.description %></li>
  <%end%>
</ul>

<div>
<%= form_for [@question, @answer] do |f| %>
  <%= f.label :description, "Your answer:" %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>
</div>
